FROM alpine:3.18

# Install dependencies
RUN apk add --no-cache bash curl

# Install Terminal Favorites Manager with embedded checksum verification
RUN curl -L -o fav.sh https://github.com/marceloxp/fav/releases/download/v1.0.0/fav.sh \
    && echo "5f4471307d46361427226ea2c1b2bb59e3664d7b59831833253bb34c78aef2cf  fav.sh" | sha256sum -c \
    && mv fav.sh /usr/local/bin/fav \
    && chmod +x /usr/local/bin/fav

# Add to PATH and source in shell
RUN echo 'export PATH="/usr/local/bin:$PATH"' >> /root/.bashrc \
    && echo 'source /usr/local/bin/fav' >> /root/.bashrc

# Start Bash
CMD ["/bin/bash"]
